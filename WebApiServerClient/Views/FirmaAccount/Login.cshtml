<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Firma</b>Giriş</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form id="formid" action="http://176.240.229.56:8080/auth/company/login" method="post">
                <div class="form-group has-feedback">
                    <input type="text" placeholder="Username.." class="form-control" id="email" name="email">

                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password.." id="password" name="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">

                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        @* <a href="@Url.Action("Index", "FirmaAccount")"> </a>*@
                        <input type="submit" class="btn  btn-info" id="submitButton" name="submitButton" value="Giriş Yap" />

                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <script type="text/javascript">             
                var data_token;
                function isLogin() {

                    $.ajax({
                        url: "http://176.240.229.56:8080/company/store",
                        type: "GET",
                        dataType: "json",
                        headers: {
                            'x-access-token': window.data_token,
                            'Content-Type': 'application/json'

                        },
                        success: function (data) {
                            debugger;
                            var model = new Object();
                            for (var i = 0; i < data.length; i++) {                           
                            }
                        }
                           
                    })


                }

                $("#formid").submit(function (event) {
                    /* stop form from submitting normally */
                    event.preventDefault();

                    /* get the action attribute from the <form action=""> element */
                    var $form = $(this),
                        url = $form.attr('action');

                    /* Send the data using post with element id name and name2*/
                    var posting = $.post(url, { email: $('#email').val(), password: $('#password').val() });

                    /* Alerts the results */


                    posting.done(function (data) {
                        window.data_token = data.token;
                        window.open("/FirmaAccount/Index/" + window.data_token,"_self");
                    });

                    posting.fail(function (data) {
                        Command: toastr["error"]("Giriş Yaparken Bir Hata Oluştu");

                    });
                });


                toastr.options = {
                    "closeButton": false,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
            </script>

            <!-- /.social-auth-links -->
            <a href="@Url.Action("Login", "Account")" class="text-center">Yönetici Olarak Giriş Yap</a>
        </div>
        <!-- /.login-box-body -->
